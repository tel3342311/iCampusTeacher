<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    app:behavior_hideable="true"
    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contact_item_bottom_sheet_height"
    android:background="@color/md_white_1000">

    <View
        android:id="@+id/sep_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_100"
        android:layout_alignParentTop="true"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/delete"
        android:layout_width="@dimen/contact_item_bottom_sheet_btn_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn_bg"
        android:text="@string/delete"
        android:textColor="@drawable/btn_text_color"
        android:textSize="@dimen/login_option_text_size"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/edit"
        android:layout_width="@dimen/contact_item_bottom_sheet_btn_width"        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignParentEnd="true"
        android:background="@drawable/btn_bg"
        android:text="@string/edit"
        android:textColor="@drawable/btn_text_color"
        android:textSize="@dimen/login_option_text_size"/>

</RelativeLayout>