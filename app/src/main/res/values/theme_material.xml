<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppMaterialTheme" parent="AppMaterialTheme.Base">
    </style>
    <!-- general theme for all API -->
    <style name="AppMaterialTheme.Base" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <!-- No "ActionBar", change to Toolbar -->
        <item name="windowActionBar">false</item>
        <!-- Main color -->
        <item name="colorPrimary">@color/color_primary</item>
        <!-- status bar background color -->
        <item name="colorPrimaryDark">@color/color_primaryDark</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlNormal">@color/color_primaryDark</item>
        <item name="colorControlHighlight">@color/color_ControlHighlight</item>
        <item name="android:windowBackground">@color/color_windowBackground</item>
        <!-- other colors could changed colorControlNormal, colorControlActivated, colorControlHighlight, colorSwitchThumbNormal -->
        <!-- Inactive thumb color -->
	   <item name="colorSwitchThumbNormal">@color/md_grey_50</item>
	   <!-- Inactive track color(30% transparency) -->
	   <item name="android:colorForeground">@color/md_grey_600</item>
	   <item name="android:listDivider">@color/md_black_1000</item>
    </style>
</resources>
